@using PagedList
@using PagedList.Mvc
@model IPagedList<MvcBurakBlog.Models.Makale>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    <div class="btn btn-primary btn-info">

        @Html.ActionLink("Create New", "Create")

    </div>
</p>
<div class="btn navbar-btn btn-lg">
    @using (Html.BeginForm())
    {
        <p>
            Title: @Html.TextBox("Index","Makales",FormMethod.Get) <br />
            <input type="submit" value="Search" />
        </p>
    }
</div>
    <div class="list-of-posts">
        <table class="table" id="example">
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Author
                </th>
                <th>
                    Date
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Baslik, new { @class = "post" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Yazar, new { @class = "post" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tarih, new { @class = "post" })

                    </td>
                    <td>
                        <div class="btn btn-warning">
                            @Html.ActionLink("Edit", "Edit", new { id = item.MakaleId }) |
                            <span class="glyphicon glyphicon-pencil"></span>
                        </div>
                        <div class="btn btn-default">
                            @Html.ActionLink("Details", "Details", new { id = item.MakaleId }) |
                            <span class="glyphicon glyphicon-search"></span>
                        </div>
                        <div class="btn btn-danger">
                            @Html.ActionLink("Delete", "Delete", new { id = item.MakaleId })
                            <span class="glyphicon glyphicon-remove-circle"></span>
                        </div>
                    </td>
                </tr>


            }


        </table>

        <div class="pagedList">
            @Html.PagedListPager(Model, sayfa => Url.Action("Index", new { sayfa }), PagedListRenderOptions.ClassicPlusFirstAndLast)
        </div>

    </div>


    <script>


    </script>


    <script src="~/Content/jquery.js"></script>
    <script src="~/Content/custom.js"></script>
    <script src="~/Content/paginate.js"></script>
